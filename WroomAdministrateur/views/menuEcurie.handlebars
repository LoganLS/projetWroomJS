<center>
<img src="image/cat_ecurie.png" alt="casque">
<h1>Gestion des écuries</h1>
<img src="/image/act_add.png">
<a href="/menuEcurie/ajouterEcurie">Ajouter une écurie</a>
<table id="tableMenu">
    <tr>
        <th>Nom</th>
        <th>Directeur</th>
        <th>Points</th>
        <th>Actions</th>
    </tr>
    {{#each ecuries}}
        <tr>
            <td class="ligne">{{this.ECUNOM}}</td>
            <td class="ligne">{{this.ECUNOMDIR}}</td>
            <td class="ligne">{{this.ECUPOINTS}}</td>
            <td class="ligne">
                <img src="/image/act_edit.png"/><a href="/menuEcurie/modifierEcurie/{{this.ECUNUM}}">Modifier</a>
                <img src="/image/act_delete.png"/><a href="/menuEcurie/supprimerEcurie/{{this.ECUNUM}}">Supprimer</a>
            </td>
        </tr>
    {{/each}}
</table>
</center>

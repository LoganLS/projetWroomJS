<center>
    <a href=""><img src="/image/cat_circuit.png"/></a>
    <h1>Gestion des Circuits</h1>
    <a href="/menuCircuits/ajouterCircuit"><img src="/image/act_add.png"/> Ajouter un circuit</a><br/><br/>

    <table id="tableMenu">
        <th>Nom</th><th>Longueur</th><th>Nombre de spectateurs</th><th>Actions</th>
        {{#each menuCircuit}}
        <tr>
            <td class="ligne">{{this.cirnom}}</td>
            <td class="ligne">{{this.cirlongueur}}</td>
            <td class="ligne">{{this.cirnbspectateurs}}</td>
            <td class="ligne">
                <img src="/image/act_edit.png"/><a href="/menuCircuits/modifierCircuit/{{this.cirnum}}">Modifier</a>
                <img src="/image/act_delete.png"/><a href="/menuCircuits/supprimerCircuit/{{this.cirnum}}">Supprimer</a>
            </td>
        </tr>
        {{/each}}
    </table>
</center>
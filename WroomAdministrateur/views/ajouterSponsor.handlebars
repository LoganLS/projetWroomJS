<center>
    <h1>Ajouter un Sponsor</h1>
    <form action="/menuSponsors/ajouterSponsor/ajout" method="post">
        <table> 
            <tr><td>Nom</td><td><input type="text" name="nom" required/></td></tr>
            <tr><td>Secteur d'activit√©</td><td><input type="text" name="activite" required/></td></tr>
            <tr><td>Ecurie sponsorisee</td>
                <td> 
                    <select name="ecurie">
                            <option value="0">Aucune</option>
                        {{#each listeEcurie}}
                            <option value="{{this.ECUNUM}}">{{this.ECUNOM}}</option>
                        {{/each}}
                    </select>
                </td>
            </tr>
        </table>

        <br/><br/>
        <input type="submit" name="ajouter" value="Ajouter" id="bouton"/>
    </form>
</center>